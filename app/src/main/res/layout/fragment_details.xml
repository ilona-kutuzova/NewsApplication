<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsFragment"
    android:id="@+id/fragmentLocation">

    <TextView
        android:id="@+id/fill_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fill_me"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/fill_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fill_me"
        android:textSize="20dp"

        app:layout_constraintTop_toBottomOf="@+id/fill_title"/>

    <TextView
        android:id="@+id/fill_pubDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fill_me"
        android:textSize="20dp"

        app:layout_constraintTop_toBottomOf="@+id/fill_description"/>

    <TextView
        android:id="@+id/fill_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fill_me"
        android:textSize="20dp"
        android:textColor="@color/blue"

        app:layout_constraintTop_toBottomOf="@+id/fill_pubDate"/>

</androidx.constraintlayout.widget.ConstraintLayout>

